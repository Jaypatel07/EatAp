@model EatAp.Models.Review

  <body>
    <div class="container">
      <div class="page-header">
        <h4>Add a Review</h4>
      </div>
      <div class = "col-sm-6">
        <form class="form-horizontal" asp-action="addreview" asp-controller="Home" method="Post">
            <input type="hidden" asp-for="User" value="@ViewBag.CurrentUser">
            <input type="hidden" asp-for="UserId" value="@ViewBag.CurrentUser.UserId">
            <input type="hidden" asp-for="RestaurantId" value="@ViewBag.CurrentAdmin.AdminId">
 
        <div class="form-group">
          <span asp-validation-for="Name"></span>
          <label class="control-label col-sm-2" asp-for="Name">Title:</label>
          <div class="col-sm-10">
            <input asp-for="Name">
          </div>
        </div>
        <div class="form-group">
          <span asp-validation-for="ReviewDesc"></span>
          <label class="control-label col-sm-2" asp-for="ReviewDesc">Description:</label>
          <div class="col-sm-10">
            <input asp-for="ReviewDesc">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
        </div>
      </form>
 
    </div>
  </body>
</html>